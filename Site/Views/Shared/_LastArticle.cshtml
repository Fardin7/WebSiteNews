@model List<Model.News>
<div class="row">
    <div class="col-lg-12">
        <div class="section-tittle mb-30">
            <h3>اخرین مقالات</h3>
        </div>
    </div>
</div>
<div class="row" id="lastnewscontainer" >
    <div class="col-12">
        <div class="recent-active dot-style d-flex dot-style"  >
            @foreach (var item in Model)
            {
                <div class="single-recent mb-100">
                    <div class="what-img">
                        <img src="@item.ImageAddress" />
                    </div>
                    <div class="what-cap">
                        <span class="color1">@item.Title</span>
                        <h4>
                            @Html.RouteLink(item.Description, "news", new { type = "مقاله", cattegory = item.Subcategory.Title, newscattegory = item.NewsSubCategory.NewsCategory.Title, id = item.Title })

                         

                        </h4>
                    </div>
                </div>
            }


        </div>
    </div>
</div>