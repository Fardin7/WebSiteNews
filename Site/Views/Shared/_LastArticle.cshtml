@model List<Model.News>
<div class="row">
    <div class="col-lg-12">
        <div class="section-tittle mb-30">
            <h3>@Resource.Resource.Last_Article </h3>
        </div>
    </div>
</div>
<div class="row" id="lastnewscontainer" >
    <div class="col-12">
        <div class="recent-active dot-style d-flex dot-style"  >
            @foreach (var item in Model)
            {
                <div class="single-recent mb-100">
                    <div class="what-img">
                        <img src="@item.ImageAddress" style="width:370px;height:370px;" />
                    </div>
                    <div class="what-cap">
                        <span class="color1">@item.Title</span>
                        <h4>
                         @{ 
                           //  var newstype = Resource.Resource.Article;
                             }
                             @Html.RouteLink(item.Description.Substring(0,(int)FixValue.DescriptionLength), "news", new { type = item.NewsType, cattegory = item.Subcategory.Title, newscattegory = item.NewsSubCategory.NewsCategory.Title, id = item.Title })



                        </h4>
                    </div>
                </div>
            }


        </div>
    </div>
</div>