@model IEnumerable<Model.NewsCategory>
@{
    var newstype = CultureHelper.EnumLocalize(Enum.GetName(typeof(NewsType), ViewBag.newstype), Thread.CurrentThread.CurrentUICulture);
        }
<aside class="single_sidebar_widget post_category_widget">
    <h4 class="widget_title">@Resource.Resource.Category</h4>
    <ul class="list cat-list">
        @foreach (var item in Model)
        {
            var alink = Url.RouteUrl("newsofnewscategory", new { type = newstype, newscategoryname = item.Title });

            <li>
                <a href="@alink" class="d-flex">
                    <p>@item.Title</p>
                    @*<p>(37)</p>*@
                </a>
            </li>
        }


    </ul>
</aside>