@model List<Model.Category>
<div class="row">
    <div class="col-lg-12">
        <div class="section-tittle mb-30">
            <h3>@Resource.Resource.Through_Iran</h3>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="weekly2-news-active dot-style d-flex dot-style">
            @foreach (var item in Model)
            {
                var newstype = Resource.Resource.News;
                var alink = Url.RouteUrl("newsofcategory", new { type = newstype, categoryname = item.Title });

                <a href="@alink">
                    <div class="weekly2-single">
                        <div class="weekly2-img">
                            <img src="@item.ImageAddress" alt="">
                        </div>
                        <div class="weekly2-caption">
                            <span class="color1">@item.Title</span>
                            @*<p>25 Jan 2020</p>
                                <h4><a href="#">Welcome To The Best Model  Winner Contest</a></h4>*@
                        </div>
                    </div>
                </a>

            }

        </div>
    </div>
</div>
