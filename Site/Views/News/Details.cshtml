@model News
@section css{
    <link rel="stylesheet" href="~/WebSiteContent/assets/css/rtl/responsive.css">
}
@section scripts{

    @Scripts.Render("~/bundles/Paging")
    @Scripts.Render("~/bundles/customdropdownjs")
    @Scripts.Render("~/bundles/jqueryval")
}


<section class="blog_area single-post-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 posts-list">
                <div class="single-post">
                    <div class="feature-img">
                        <img style="width:750px;height:375px;" class="img-fluid" src="@Model.ImageAddress" alt="">
                    </div>
                    <div class="blog_details">
                        <h2>
                            @Model.Title
                        </h2>
                        <ul class="blog-info-link mt-3 mb-4">
                            <li><a href="#"><i class="fa fa-user"></i> @Model.Subcategory.Title, @Model.NewsSubCategory.NewsCategory.Title</a></li>
                            <li><a href="#"><i class="fa fa-comments"></i> @*@Model.ApplicationUser.UserName*@</a></li>
                        </ul>
                        @Html.Raw(Model.Body)
                    </div>
                </div>
                <div class="navigation-top">
                    <div class="d-sm-flex justify-content-between text-center">
                        @*<p class="like-info">
                                <span class="align-middle"><i class="fa fa-heart"></i></span> Lily and 4
                                people like this
                            </p>*@
                        <div class="col-sm-4 text-center my-2 my-sm-0">
                            <!-- <p class="comment-count"><span class="align-middle"><i class="fa fa-comment"></i></span> 06 Comments</p> -->
                        </div>
                        <ul class="social-icons">
                            <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
                            <li><a href="#"><i class="fab fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fab fa-dribbble"></i></a></li>
                            <li><a href="#"><i class="fab fa-behance"></i></a></li>
                        </ul>
                    </div>

                    @Html.Action("IndexPartial", "News", new { type = Model.NewsType, categoryname = Model.Subcategory.Title, newscategoryname = Model.NewsSubCategory.NewsCategory.Title, partialname = "_NewsOfCategoryAndNewsCategory", count = 2 })


                </div>
