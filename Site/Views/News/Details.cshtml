                @Html.Action("PartialCommet", "Comment", new { newsid = Model.Id })

            </div>
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget search_widget">
                        <form action="#">
                            <div class="form-group">
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder='@Resource.Resource.Search_Keyword'
                                           onfocus="this.placeholder = ''" onblur="this.placeholder = '@Resource.Resource.Search_Keyword'">
                                    <div class="input-group-append">
                                        <button class="btns" type="button"><i class="ti-search"></i></button>
                                    </div>
                                </div>
                            </div>
                            <button class="button rounded-0 primary-bg text-white w-100 btn_1 boxed-btn"
                                    type="submit">
                                @Resource.Resource.Search
                            </button>
                        </form>
                    </aside>

                    @Html.Action("IndexPartial", "NewsCategory", new { partialname = "_NewsCategoryList", newstype = Model.NewsType })


                    @Html.Action("IndexPartial", "News", new { type = Model.NewsType, categoryname = Model.Subcategory.Category.Title, partialname = "_NewsOfCategory", count = 4 })

                    @if (Model.KeyWord != null)
                    {
                        <aside class="single_sidebar_widget tag_cloud_widget">
                            <h4 class="widget_title">@Resource.Resource.Tag_Clouds</h4>

                            <ul class="list">
                                @for (int i = 0; i < Model.KeyWord.Split(new char[] { ',' }).Length; i++)
                                {
                                    <li>
                                        <a href="#">@Model.KeyWord.Split(new char[] { ',' })[i]</a>
                                    </li>
                                }


                            </ul>
                        </aside>
                    }

