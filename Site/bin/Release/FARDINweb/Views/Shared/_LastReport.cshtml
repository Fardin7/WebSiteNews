@model List<Model.News>

<div class="trending-bottom">
    <div class="row">
        @foreach (var item in Model)
        {
            
                var newstype = Resource.Resource.Report;


            <div class="col-lg-4">
                <div class="single-bottom mb-35">
                    <div class="trend-bottom-img mb-30">
                        <img style="width:236.656px;height:157.766px;" src="@item.ImageAddress" alt="@item.Title">
                    </div>
                    <div class="trend-bottom-cap">
                        <span class="color1">@item.Title</span>
                        <h4>
                            @Html.RouteLink(item.Description, "news", new { type = newstype, cattegory = item.Subcategory.Title, newscattegory = item.NewsSubCategory.NewsCategory.Title, id = item.Title })

                            

                        </h4>
                    </div>
                </div>
            </div>

        }


    </div>
</div>